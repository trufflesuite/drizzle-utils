{
  "name": "drizzle-utils",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:trufflesuite/drizzle-utils.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint packages",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-prettier": "^3.0.0",
    "ganache-cli": "^6.2.3",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test-app/",
      "/coverage/"
    ]
  }
}
